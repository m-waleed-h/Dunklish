Screen:

    MDCard:
        size_hint: None, None
        size: 400, 420
        pos_hint: {"center_x":0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'


        MDLabel:
            id: welcome_label
            text: "WELCOME"
            font_size: 20
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5


        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "key"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Login"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_press: app.loginFunc()

        MDRoundFlatButton:
            text: "Reset Password"
            font_size: 20
            pos_hint: {"center_x": 0.5}
            on_press: app.passReset()


